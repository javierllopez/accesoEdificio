<div class="container-sm p-6">
    <h1>Ingreso</h1>
    <form action="/login" method="post" onsubmit="prenderRuedita()">
        <div class="mb-3">
            <label for="username" class="form-label">Nombre de usuario</label>
            <input type="text" class="form-control" id="username" name="username">
            <div id="usernameAyuda" class="form-text">Ingrese un nombre de usuario</div>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Ingrese una clave</label>
            <input type="password" class="form-control" id="password" name="password">
            <div id="passwordAyuda" class="form-text">Ingrese su clave de acceso</div>
        </div>
        <div class="d-grid gap-2">
            <button id="botonIngresar" type="submit" class="btn btn-primary">
                <span id="textoBotonIngresar">Ingresar</span>
            </button>
        </div>
        <div class="d-grid gap-2 my-2">
            <a class="btn btn-primary" href="/" onclick="prenderRuedita()">Volver</a>
        </div>
    </form>

</div>
